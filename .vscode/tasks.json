{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "1. 패키지 설치 (pip install)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "pip", "install", "-r", "requirements.txt"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "2. 전체 파이프라인 실행 (run_all)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["run_all.py"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "always", "panel": "shared" },
      "dependsOn": "1. 패키지 설치 (pip install)"
    },
    {
      "label": "3. 주피터 노트북 자동 실행",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "jupyter", "nbconvert", "--to", "notebook", "--execute", "--inplace", "hypotension_pipeline.ipynb"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": { "reveal": "always", "panel": "shared" },
      "dependsOn": "1. 패키지 설치 (pip install)"
    },
    {
      "label": "Git: GitHub에 자동 저장 (커밋+푸시)",
      "type": "shell",
      "command": "powershell -ExecutionPolicy Bypass -File push_to_github.ps1",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "none",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "설정 검증 (check_setup)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["check_setup.py"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "none",
      "presentation": { "reveal": "always", "panel": "shared" }
    }
  ]
}
